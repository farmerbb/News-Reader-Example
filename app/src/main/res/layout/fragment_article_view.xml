<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/article_content_margins"
            android:layout_marginLeft="@dimen/article_content_margins"
            android:layout_marginRight="@dimen/article_content_margins"
            android:fontFamily="@font/libre_franklin"
            android:textColor="@color/article_title"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/article_title" />

        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="@dimen/article_content_margins"
            android:layout_marginRight="@dimen/article_content_margins"
            android:fontFamily="@font/libre_franklin"
            android:textColor="@color/article_text"
            android:textStyle="italic"
            android:textSize="@dimen/article_view_text"/>

        <WebView
            android:id="@+id/article_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:scrollbars="none"/>

    </LinearLayout>

</ScrollView>
